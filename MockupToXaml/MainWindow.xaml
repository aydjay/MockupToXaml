<Window x:Class="MockupToXaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mockup to XAML" Height="590" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*" />
            <RowDefinition Height="525*" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File" >
                <MenuItem Header="Open Mockup" Name="miOpenMockup" Click="miOpenMockup_Click" />
                <MenuItem Header="Exit" Name="miExit" Click="miExit_Click" />
            </MenuItem>
        </Menu>
        <Frame Source="/View/DirectionsView.xaml" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2" Name="frameMain" NavigationUIVisibility="Hidden" />
    </Grid>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF085593" Offset="0.641" />
            <GradientStop Color="#FF2A84BE" Offset="1" />
            <GradientStop Color="#FF74BCE8" Offset="0" />
        </LinearGradientBrush>
    </Window.Background>
</Window>
